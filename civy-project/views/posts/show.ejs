 <!-- Include header template -->
<% include ../partials/header %>

<% include ../partials/navbar.ejs %>

<div class="container-fluid">
    <ul class="nav nav-tabs" role="tablist">
      <li role="presentation" ><a href="/communities/<%=communityId%>">About <span class="glyphicon glyphicon-info-sign"></span></a></li>
      <li role="presentation"><a href="/communities/<%=communityId%>/invite">Invite people <span class="glyphicon glyphicon-user"></span> </a></li>
      <li role="presentation" class="active"><a href="#">Discussion boards <span class="glyphicon glyphicon-list-alt"></span></a></li>
      <li role="presentation"><a href="/communities/<%=communityId%>/notices">News <span class="glyphicon glyphicon-flag"></span></a></li>
      <li role="presentation"><a href="/communities/<%=communityId%>/questions">Important questions<span class="glyphicon glyphicon-globe"></span></a></li>
    </ul>
</div>


<div class="container-fluid">
    <a class="btn btn-primary btn-lg elem-centered" href="/communities/<%=communityId%>/boards/<%=boardId%>/posts/<%=post._id%>/comments/new">Create a new comment</a>
</div>
    

<div class="container-fluid">
    <div class="page-header">
                            
        <h1><%=post.title%></h1>
        <h2><small><%=post.description%></small></h2>
        <p><%-post.content%></p>               
    </div>
    <div class= container>
        
        <%if(comments && comments.length > 0){ %>
            <br>
            <% comments.forEach(function(comment, index){ %>
    
                <div class="container-fluid">
                    <p><strong><em><%= comment.authorName %></em></strong></p>
                    <p><%=comment.content%></p>
                </div>
                <hr>
               
            <% }); %>
        <% }else{ %>
            <h4>There are no comments in this post</h4>
        <%}%>
    </div>
    
</div>

<!-- Include footer template -->
<% include ../partials/footer %>