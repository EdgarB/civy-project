<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <br>
            <div class="container">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="page-header">
                            <h1>Create some news </h1>
                        </div>
                        <form action="/communities/<%=communityId%>/notices" method="POST">
                            <div class="form-group">
                                <label for="newsTitle">New's title:</label>
                                <input type="text"  name="news[title]" class="form-control" id="boardTitle" placeholder="Title for the discussion board">
                            </div>
                            <div class="form-group">
                                <label for="newsDesc">New's description</label><br>
                                <textarea id="newsDesc"  name="news[desc]" placeholder="News description"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Create</button>
                        </form>
                    </div>
                </div>   
            </div>
        </div>
</div>



