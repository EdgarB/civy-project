 <!-- Include header template -->
<% include ../partials/header %>

<% include ../partials/navbar.ejs %>

<div class="container-fluid">
    <ul class="nav nav-tabs" role="tablist">
      <li role="presentation" ><a href="/communities/<%=communityId%>">About <span class="glyphicon glyphicon-info-sign"></span></a></li>
      <li role="presentation"><a href="/communities/<%=communityId%>/invite">Invite people <span class="glyphicon glyphicon-user"></span> </a></li>
      <li role="presentation"><a href="/communities/<%=communityId%>/boards">Discussion boards <span class="glyphicon glyphicon-list-alt"></span></a></li>
      <li role="presentation" class="active"><a href="#">News <span class="glyphicon glyphicon-flag"></span></a></li>
      <li role="presentation"><a href="/communities/<%=communityId%>/questions">Important questions<span class="glyphicon glyphicon-globe"></span></a></li>
    </ul>
</div>

<br>

<div class="container-fluid">
    <div class="container-fluid">
        <div class="row">
            <div class="container-fluid">
                <a class="btn btn-primary btn-lg elem-centered" href="/communities/<%=communityId%>/notices/new">Create news</a>
            </div>
        </div>
        <div class="row">
            <%if(tidings && tidings.length > 0){ %>
                <br>
                <% tidings.forEach(function(notice, index){ %>
                    <hr>
                    <div class="container">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <p><strong><%=notice.title%></strong></p>
                                <p><em><%= notice.description %></em></p>
                                <p><small>published by <%=notice.authorName%> on <%=notice.datePublished%></small></p>
                            </div>
                        </div>
                    </div>
                    
                    <hr>
                   
                <% }); %>
            <% }else{ %>
                <h4>There are no tidings created.</h4>
            <%}%>
        </div>
    </div>
</div>



<!-- Include footer template -->
<% include ../partials/footer %>